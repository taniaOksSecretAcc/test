.footer
  border-top 1px solid $border_color
  height 80px
  .nav
    width auto
  .nav-list
    margin-left 0
    @media(max-width $media_tab)
      display none
  .nav-list__item_link
    font-size 12px
    line-height 16px
  .nav-list__item
    margin 0 5px
.footer-container
  height 100%
  display flex
  align-items center
.footer-copyright
  font-size 12px
  line-height 16px
  color $black
  opacity 0.7
  margin-right 17px
  @media(max-width $media_mob)
    width 100%
    text-align center