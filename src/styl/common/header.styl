.header
  width 100%
  height 70px
  box-shadow 0px 1px 4px rgba(28, 27, 26, 0.07)
  box-sizing border-box
.header-container
  display flex
  justify-content space-between
  align-items center
  height 100%
  position relative
.header-logo__link
  display block
  width 89px
.header-logo__img
  display block
  width 100%
.nav
  width 100%
  display flex
  justify-content center
  @media(max-width $media_tab)
    justify-content flex-end
    // position relative
.nav-list
  display block
  margin-left -76px
  @media(max-width $media_tab)
    display none
    position absolute
    top 72px
    right 0
    background-color #fff
    box-shadow 0px 1px 4px rgba(28, 27, 26, 0.07)
    width 100%
    padding 0 40px 20px
  @media(max-width $media_mob)
    padding 0 10px 20px
.nav-list__item
  display inline-block
  margin 0 10px
  @media(max-width $media_tab)
    display flex
    justify-content flex-end
    padding 10px 0
.nav-list__item_link
  padding 0 10px
  color $black
  opacity 0.5
  text-decoration none
  line-height 19px
.nav-list__item_link_active
  opacity 1
  position relative
  &:after
    content ""
    position absolute
    bottom -26px
    left 0
    width 100%
    height 3px
    background-color $blue
    @media(max-width $media_tab)
      bottom -10px
.nav-btn
  display none
  cursor pointer
  @media(max-width $media_tab)
    display flex
    width 21px
    height 14px
    flex-direction column
    justify-content space-between
.nav-btn__line
  width 100%
  height 2px
  background-color $black
  transition 0.4s
.nav-btn_on
  .nav-btn__line_one
      transform: rotate(45deg) translate(2px, 6px)
      height 2px
  .nav-btn__line_two 
      opacity 0
  .nav-btn__line_three
      transform rotate(-45deg) translate(2px, -7px)
      height 2px
